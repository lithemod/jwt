    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Lithe\\Auth\\": "src/auth/"
        }
    },
    "require": {
        "firebase/php-jwt": "^6.10",
        "lithemod/flow": "^1.0"
